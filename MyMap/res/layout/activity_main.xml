<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
   <com.baidu.mapapi.map.MapView  
    android:id="@+id/bmapView"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:clickable="true" />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:orientation="vertical" >
       <Button 
           android:id="@+id/where_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="我的位置"/>
       <Button 
           android:id="@+id/mock_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="模拟导航"/>
       
       <Button 
           android:id="@+id/real_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="真实导航"/>
       
       
   </LinearLayout>

  
  <RelativeLayout 
    android:visibility="gone"
    android:id="@+id/marker_layout"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#cc4e5a6b"
    android:layout_height="220dp" >
    
    <ImageView 
        android:id="@+id/info_img_view"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/king"
        android:scaleType="fitXY"
        android:background="@drawable/img_border">
        
    </ImageView>
    
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            
             <TextView
                 android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拯救地球的凯" 
                android:textColor="#fff5eb"
                />
        
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离1000米" 
                android:textColor="#fff5eb"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/zan_imgview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xin" 
                android:clickable="true"/>
            
            <TextView
                android:id="@+id/zanshu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="789" 
                android:layout_gravity="center"
                android:textColor="#fff5eb"/>
         
            
        </LinearLayout>

    
        
    </RelativeLayout>
 
    
    

</RelativeLayout>
   
    

</RelativeLayout>
